<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.view.activity.DonationInformationActivity">

    <ImageButton
        android:id="@+id/btn_donationInformation_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_back_button"
        android:layout_margin="6dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/donation_information_heading"
        android:textSize="26sp"
        android:textColor="@color/primary_dark_blue"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24dp"
        android:text="@string/donation_information_subheading"
        android:textSize="22sp"
        android:textColor="@color/primary_blue"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="480dp">

        <TextView
            android:id="@+id/tv_donationInformation_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/primary_dark_blue"/>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_donationInformation_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="8dp"
        android:paddingHorizontal="36dp"
        android:backgroundTint="@color/primary_light_blue"
        android:text="OKAY"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="50dp"/>

</LinearLayout>