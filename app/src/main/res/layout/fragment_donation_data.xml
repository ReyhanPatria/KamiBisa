<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.view.fragment.createDonation.DonationDataFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail penggalangan dana &amp; perkiraan biaya"
        android:textSize="26sp"
        android:textColor="@color/primary_dark_blue"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="480dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="16dp"
                android:text="Beri judul untuk penggalangan danamu"
                android:textColor="@color/primary_dark_blue" />

            <EditText
                android:id="@+id/edt_donationData_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_box"
                android:hint="contoh: Bantu warga pulih dari bencana"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textColor="@color/primary_dark_blue"
                android:textColorHint="@color/primary_dark_blue"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="16dp"
                android:text="Link untuk penggalangan danamu"
                android:textColor="@color/primary_dark_blue" />

            <EditText
                android:id="@+id/edt_donationData_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_box"
                android:drawableStart="@drawable/ic_kamibisa_web_link"
                android:drawablePadding="10dp"
                android:hint="contoh: bantukafi"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textColor="@color/primary_dark_blue"
                android:textColorHint="@color/primary_dark_blue"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="16dp"
                android:text="Berapa biaya yang kamu butuhkan"
                android:textColor="@color/primary_dark_blue" />

            <EditText
                android:id="@+id/edt_donationData_targetAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_box"
                android:drawableStart="@drawable/ic_rp"
                android:drawablePadding="10dp"
                android:inputType="number"
                android:hint="0"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textColor="@color/primary_dark_blue"
                android:textColorHint="@color/primary_dark_blue"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="16dp"
                android:text="Untuk apa dana tersebut akan digunakan?"
                android:textColor="@color/primary_dark_blue" />

            <EditText
                android:id="@+id/edt_donationData_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_box"
                android:gravity="top|left"
                android:hint="@string/donation_description_example"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:textColor="@color/primary_dark_blue"
                android:textColorHint="@color/primary_dark_blue"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="16dp"
                android:text="Sampai kapan galang danamu berlangsung?"
                android:textColor="@color/primary_dark_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Perkiraan tanggal berakhir dapat diubah lagi nanti"
                android:textColor="@color/primary_dark_blue"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/edt_donationData_endDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_box"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="10dp"
                android:focusable="false"
                android:hint="Pilih tanggal akhir penggalangan dana"
                android:inputType="date"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textColor="@color/primary_dark_blue"
                android:textColorHint="@color/primary_dark_blue"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="16dp"
                android:text="Nomor HP kamu yang dapat dihubungi"
                android:textColor="@color/primary_dark_blue" />

            <EditText
                android:id="@+id/edt_donationData_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_box"
                android:inputType="phone"
                android:hint="Masukkan nomor HP kamu"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:textColor="@color/primary_dark_blue"
                android:textColorHint="@color/primary_dark_blue"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_donationData_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="8dp"
                android:backgroundTint="@color/white"
                android:text="SEBELUMNYA"
                android:textSize="14sp"
                android:textColor="@color/primary_blue"
                android:textStyle="bold"
                app:cornerRadius="50dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_donationData_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="50"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="8dp"
                android:backgroundTint="@color/primary_light_blue"
                android:text="SELANJUTNYA"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:cornerRadius="50dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>