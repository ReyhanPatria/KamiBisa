<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_blue"
    android:padding="24dp"
    tools:context=".ui.view.activity.EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_editProfile_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back_button"
            android:layout_margin="6dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_edit_profile_picture_logo"/>

        <EditText
            android:id="@+id/edt_editProfile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_grey_text_box"
            android:layout_marginVertical="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:drawablePadding="16dp"
            app:drawableLeftCompat="@drawable/ic_profile_picture"
            android:hint="User's name"
            android:textColorHint="@color/text_hint_blue"
            android:textSize="20sp"
            android:textColor="@color/primary_dark_blue"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/edt_editProfile_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_grey_text_box"
            android:layout_marginVertical="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:drawablePadding="16dp"
            app:drawableLeftCompat="@drawable/ic_outgoing_call"
            android:hint="User's phone number"
            android:textColorHint="@color/text_hint_blue"
            android:textSize="20sp"
            android:textColor="@color/primary_dark_blue"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/edt_editProfile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_grey_text_box"
            android:layout_marginVertical="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:drawablePadding="16dp"
            app:drawableLeftCompat="@drawable/ic_mail"
            android:hint="User's email"
            android:textColorHint="@color/text_hint_blue"
            android:textSize="20sp"
            android:textColor="@color/primary_dark_blue"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/edt_editProfile_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:background="@drawable/ic_grey_text_box"
            android:drawablePadding="16dp"
            android:focusable="false"
            android:hint="User's birth date"
            android:inputType="date"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textColor="@color/primary_dark_blue"
            android:textColorHint="@color/text_hint_blue"
            android:textSize="20sp"
            app:drawableLeftCompat="@drawable/ic_calendar" />

        <EditText
            android:id="@+id/edt_editProfile_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_grey_text_box"
            android:layout_marginVertical="8dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:drawablePadding="16dp"
            app:drawableLeftCompat="@drawable/ic_lock"
            android:hint="New password"
            android:textColorHint="@color/text_hint_blue"
            android:textSize="20sp"
            android:textColor="@color/primary_dark_blue"
            android:inputType="textPassword"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_editProfile_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:paddingVertical="12dp"
            android:paddingHorizontal="32dp"
            android:text="Apply"
            android:textSize="24sp"
            android:textColor="@color/pink"
            app:cornerRadius="50dp"/>

        <TextView
            android:id="@+id/tv_editProfile_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:text="RESET"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18dp"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_editProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>