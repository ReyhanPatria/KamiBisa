<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.view.fragment.createDonation.DonationConfirmationFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apakah semua informasi yang kamu masukkan sudah benar dan lengkap?"
        android:textSize="26sp"
        android:textColor="@color/primary_dark_blue"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_createDonation_confirmation_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="28dp"
            android:backgroundTint="@color/white"
            app:strokeWidth="2dp"
            app:strokeColor="@color/primary_dark_blue"
            android:drawableLeft="@drawable/ic_pink_ellipse"
            android:text="Ya"
            android:textColor="@color/primary_dark_blue"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_createDonation_confirmation_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="28dp"
            android:backgroundTint="@color/white"
            app:strokeWidth="2dp"
            app:strokeColor="@color/primary_dark_blue"
            android:drawableLeft="@drawable/ic_pink_ellipse"
            android:text="Tidak"
            android:textColor="@color/primary_dark_blue"/>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_createDonation_confirmation_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="80dp"
        android:backgroundTint="@color/white"
        app:strokeWidth="1dp"
        android:text="SEBELUMNYA"
        android:textSize="14sp"
        android:textColor="@color/primary_blue"
        android:textStyle="bold"
        app:cornerRadius="50dp"/>

</LinearLayout>